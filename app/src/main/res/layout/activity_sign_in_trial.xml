<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_darkx"
    tools:context=".activity.TrialAccountActivity"
    android:baselineAligned="false"
    android:id="@+id/theme_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent"
                android:gravity="center">

                <androidx.nemosofts.material.ImageViewRound
                    app:irv_corner_radius="@dimen/_5sdp"
                    android:src="@drawable/logo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"/>

                <androidx.nemosofts.material.IconTextView
                    android:id="@+id/btn_list_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_shield_user"
                    app:iconSize="@dimen/_21sdp"
                    app:iconPadding="@dimen/_4sdp"
                    app:iconPosition="start"
                    app:iconColor="@color/black"
                    android:text="@string/list_users"
                    android:lines="1"
                    android:textColor="?nsBlack"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/focused_btn_ui_selector"
                    android:nextFocusRight="@id/et_any_name"
                    android:layout_marginTop="@dimen/_15sdp"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_card_sub"
                android:backgroundTint="?nsTitle"
                android:orientation="vertical"
                android:padding="@dimen/_13sdp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/trial_account_details"
                    android:textAlignment="viewStart"
                    android:textColor="?nsTitle"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_profile"
                        app:tint="?nsWhite" />

                    <View
                        android:background="#23FFFFFF"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_name"
                        android:textAlignment="viewStart"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="?nsWhite"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:text="@string/xxxxxxxxx"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:text="@string/trial_account_details"
                    android:textAlignment="viewStart"
                    android:textColor="?nsTitleSub"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_msg_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_12sdp"
                    android:text="@string/app_name"
                    android:textAlignment="viewStart"
                    android:textColor="?nsTitle"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    android:id="@+id/ll_btn_add"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/focused_btn_danger"
                    android:orientation="horizontal"
                    tools:ignore="RelativeOverlap"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_8sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_login"
                        app:tint="?nsWhite"
                        android:contentDescription="@string/todo"/>

                    <TextView
                        android:id="@+id/tv_login_text"
                        android:text="@string/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?nsWhite"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>