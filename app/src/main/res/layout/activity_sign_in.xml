<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_darkx"
    tools:context=".activity.SignInActivity"
    android:baselineAligned="false"
    android:id="@+id/theme_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent"
                android:gravity="center">

                <androidx.nemosofts.material.ImageViewRound
                    app:irv_corner_radius="@dimen/_5sdp"
                    android:src="@drawable/logo"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.nemosofts.material.IconTextView
                        android:id="@+id/btn_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_shield_cross"
                        app:iconSize="@dimen/_21sdp"
                        app:iconPadding="@dimen/_4sdp"
                        app:iconPosition="start"
                        app:iconColor="@color/black"
                        android:lines="1"
                        android:text="@string/trial_account"
                        android:textColor="?nsBlack"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/focused_btn_ui_selector"
                        android:nextFocusRight="@id/btn_list_users"
                        android:layout_marginEnd="@dimen/_2sdp" />

                    <androidx.nemosofts.material.IconTextView
                        android:id="@+id/btn_list_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_shield_user"
                        app:iconSize="@dimen/_21sdp"
                        app:iconPadding="@dimen/_4sdp"
                        app:iconPosition="start"
                        app:iconColor="@color/black"
                        android:text="@string/list_users"
                        android:lines="1"
                        android:textColor="?nsBlack"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/focused_btn_ui_selector"
                        android:nextFocusRight="@id/et_any_name"
                        android:layout_marginStart="@dimen/_2sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.nemosofts.material.IconTextView
                        android:id="@+id/btn_vpn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_vpn"
                        app:iconSize="@dimen/_21sdp"
                        app:iconPadding="@dimen/_4sdp"
                        app:iconPosition="start"
                        app:iconColor="@color/black"
                        android:text="@string/connect_vpn"
                        android:textColor="?nsBlack"
                        android:lines="1"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/focused_btn_ui_selector"
                        android:nextFocusRight="@id/et_any_name"
                        android:layout_marginStart="@dimen/_2sdp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_card_sub"
                android:backgroundTint="?nsTitle"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/enter_login_details"
                    android:textAlignment="viewStart"
                    android:textColor="?nsTitle"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_profile"
                        app:tint="?nsWhite" />

                    <View
                        android:background="#23FFFFFF"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/et_any_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/focused_edit_text"
                        android:hint="@string/any_name"
                        android:imeOptions="actionNext|flagNoFullscreen"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textAlignment="viewStart"
                        android:textColor="?nsWhite"
                        android:textColorHint="?nsTitleSub"
                        android:textSize="@dimen/_10ssp"
                        android:nextFocusDown="@+id/et_user_name" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_profile"
                        app:tint="?nsWhite" />

                    <View
                        android:background="#23FFFFFF"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/et_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/user_name"
                        android:textAlignment="viewStart"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="?nsWhite"
                        android:textColorHint="?nsTitleSub"
                        android:textSize="@dimen/_10ssp"
                        android:imeOptions="actionNext|flagNoFullscreen"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/focused_edit_text"
                        android:nextFocusUp="@+id/et_any_name"
                        android:nextFocusDown="@+id/et_login_password" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/bg_edit_text"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/todo"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/ic_lock"
                            app:tint="?nsWhite" />

                        <View
                            android:background="#23FFFFFF"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"/>

                        <EditText
                            android:id="@+id/et_login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:hint="@string/user_password"
                            android:textAlignment="viewStart"
                            android:importantForAutofill="no"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/_5sdp"
                            android:textColor="?nsWhite"
                            android:textColorHint="?nsTitleSub"
                            android:textSize="@dimen/_10ssp"
                            android:imeOptions="actionDone|flagNoFullscreen"
                            android:background="@drawable/focused_edit_text"
                            android:nextFocusUp="@+id/et_user_name"
                            android:nextFocusRight="@+id/iv_visibility"
                            android:nextFocusDown="@id/rv_dns" />

                    </LinearLayout>

                    <View
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_toStartOf="@+id/iv_visibility"
                        android:background="#23FFFFFF" />

                    <ImageView
                        android:id="@+id/iv_visibility"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@drawable/focused_edit_text"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_4sdp"
                        android:src="@drawable/ic_login_visibility_off"
                        app:tint="?nsWhite"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:nextFocusUp="@+id/et_user_name"
                        android:nextFocusLeft="@+id/et_login_password"
                        android:nextFocusDown="@id/rv_dns"/>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_dns"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:nextFocusUp="@+id/et_login_password"/>

                <LinearLayout
                    android:id="@+id/ll_url"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:background="@drawable/bg_edit_text"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/ic_link"
                        app:tint="?nsWhite" />

                    <View
                        android:background="#23FFFFFF"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"/>

                    <EditText
                        android:id="@+id/et_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/url_here_com_port"
                        android:textAlignment="viewStart"
                        android:importantForAutofill="no"
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:padding="@dimen/_5sdp"
                        android:textColor="?nsWhite"
                        android:textColorHint="?nsTitleSub"
                        android:textSize="@dimen/_10ssp"
                        android:imeOptions="actionDone|flagNoFullscreen"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/focused_edit_text"
                        android:nextFocusDown="@id/ll_btn_add"
                        android:nextFocusUp="@id/rv_dns" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_btn_add"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/focused_btn_danger"
                    android:orientation="horizontal"
                    tools:ignore="RelativeOverlap"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_8sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_login"
                        app:tint="?nsWhite"
                        android:contentDescription="@string/todo"/>

                    <ProgressBar
                        android:id="@+id/pb_add"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_6sdp"
                        android:indeterminate="true"
                        android:indeterminateTint="?nsWhite"
                        android:visibility="gone"/>

                    <TextView
                        android:text="@string/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?nsWhite"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>