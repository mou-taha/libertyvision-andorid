<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp">

    <androidx.nemosofts.material.ImageViewRound
        android:id="@+id/iv_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:id="@+id/rl_wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/iv_wallpaper"
        android:layout_alignTop="@+id/iv_wallpaper"
        android:layout_alignEnd="@+id/iv_wallpaper"
        android:layout_alignBottom="@+id/iv_wallpaper"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:background="@drawable/focused_wallpaper_selector" />

</RelativeLayout>