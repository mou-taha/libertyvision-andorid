<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/player_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_player_overlay"
        android:clickable="false"
        android:focusable="false"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/rl_player_live_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_player_control_top"
        android:elevation="@dimen/_2sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_8sdp">

        <ImageView
            android:id="@+id/iv_back_player"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/todo"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_player_back"
            android:background="@drawable/focused_btn_play"
            android:focusable="true"
            android:focusableInTouchMode="false"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/ll_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ll_top_con"
            android:layout_toEndOf="@id/iv_back_player"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_meta_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/tv_live_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/bg_player_chip"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/live_tv_home"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_live_resolution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@drawable/bg_player_chip"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="HD"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp"
                    tools:text="FHD" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_live_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_player_chip"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="--:--"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                tools:text="12:30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top_con"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/exo_battery_info"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_battery_charging"
                android:layout_marginEnd="@dimen/_7sdp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/iv_player_fav"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_favorite_border"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_subtitle"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_closed_captioning"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/exo_pip"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_picture_in_picture"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <androidx.mediarouter.app.MediaRouteButton
                android:id="@+id/media_route_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"
                android:visibility="gone"
                android:contentDescription="Cast Button"
                app:externalRouteEnabledDrawable="@drawable/ic_cast"
                app:mediaRouteButtonTint="@color/white"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/exo_video_tracks"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_hd"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/exo_audio_tracks"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_audiotrack"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/exo_stream_format"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_file_settings"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/exo_media_info"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_information"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/exo_lock"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_unlock"
                android:layout_marginEnd="@dimen/_7sdp"
                android:contentDescription="@string/lock_player"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/exo_controller_close"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/todo" />
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:alpha="0.9"
        android:background="@drawable/focused_btn_play"
        android:contentDescription="@string/todo"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_play" />

    <LinearLayout
        android:id="@+id/ll_player_live_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingStart="@dimen/_15sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/bg_player_control_bottom"
        android:elevation="@dimen/_2sdp"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/ll_nav_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_previous"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/focused_btn_player"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_skip_previous"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/ll_now_playing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_now_playing_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_playing"
                    android:textAllCaps="true"
                    android:textColor="?nsPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    tools:text="Now Playing" />

                <TextView
                    android:id="@+id/tv_player_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    tools:text="Discovery Channel HD" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_player_epg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_epg_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--:--"
                    android:textAllCaps="true"
                    android:textColor="?nsPrimary"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold"
                    tools:text="12:30-12:30"
                    android:textAlignment="viewEnd"/>

                <TextView
                    android:id="@+id/tv_epg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    tools:text="EPG Title"
                    android:textAlignment="viewEnd"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/focused_btn_player"
                android:contentDescription="@string/app_name"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/ic_skip_next"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_action_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_channels_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/list_channels"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/channels"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_multiple_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_multiple_screen"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/multiple_screen"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_aspect_ratio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/focused_btn_player"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:padding="@dimen/_6sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_crop"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:text="@string/aspect_ratio"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
